<h1><%= @cocktail.name %></h1>


<% if @cocktail.photo? %>
  <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
<% end %>

<div>
  <% @cocktail.doses.each do |dose| %>
    <div>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <p><%= link_to "Delete ingredients", dose_path(dose), method: :delete %></p>
    </div>
  <% end %>
</div>

<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
<p><%= link_to "Delete cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-primary" %></p>

<p><%= link_to "All cocktails", cocktails_path, class: "btn btn-primary" %></p>


