<h1><%= @cocktail.name %></h1>

<div>
  <% @cocktail.doses.each do |dose| %>
    <div>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <p><%= link_to "Delete ingredients", dose_path(dose), method: :delete %></p>
    </div>
  <% end %>
</div>

<p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %></p>

<p><%= link_to "All cocktails", cocktails_path %></p>
