<div class="banner" style="background-image: linear-gradient(-225deg, rgba(02,41,36,0.6) 0%, rgba(0,0,0,0.3) 50%), url('<%= image_path('background.jpg') %>');">
  <div class="banner-content">
    <h1>Peddlers Gin Cocktails</h1>
    <p>Handcrafted in China for the discerning, adventurous drinker.</p>
  </div>
</div>

<div class="features text-center padded">
  <div class="container">
    <div class="row">
      <div>
        <h2><% @cocktails.each do |cocktail| %></h2>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
            <% if cocktail.photo? %>
                <%= cl_image_tag cocktail.photo.path, width: 250, height: 250, crop: :fill, class: "img-circle" %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="padded text-center">
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
</div>

<div id="footer">
  <ul class="list-inline">
        <li>
          <a href="#">
            <i class="fa fa-youtube" aria-hidden="true"></i>
          </a>
        </li>
        <li>
          <a href="#">
            <i class="fa fa-instagram" aria-hidden="true"></i>
          </a>
        </li>
        <li>
          <a href="">
            <i class="fa fa-facebook" aria-hidden="true"></i>
          </a>
        </li>
      </ul>
</div>
